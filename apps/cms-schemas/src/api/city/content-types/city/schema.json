{
    "kind": "collectionType",
    "collectionName": "cities",
    "info": {
        "singularName": "city",
        "pluralName": "cities",
        "displayName": "City",
        "description": "Cities and regions within destinations (e.g., Zanzibar, Dar es Salaam)"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "destination": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::destination.destination",
            "inversedBy": "cities"
        },
        "heroImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "required": true
        },
        "description": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "quickFacts": {
            "type": "component",
            "component": "shared.city-facts",
            "required": false
        },
        "attractions": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::attraction.attraction",
            "mappedBy": "city"
        },
        "tours": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::tour.tour",
            "mappedBy": "city"
        },
        "articles": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::article.article"
        },
        "hotels": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::hotel.hotel",
            "mappedBy": "city"
        },
        "seoMetadata": {
            "type": "component",
            "component": "shared.seo",
            "required": false
        }
    }
}