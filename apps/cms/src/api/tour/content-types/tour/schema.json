{
    "kind": "collectionType",
    "collectionName": "tours",
    "info": {
        "singularName": "tour",
        "pluralName": "tours",
        "displayName": "Tour",
        "description": "Bookable tours and experiences"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "city": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::city.city",
            "inversedBy": "tours"
        },
        "attractions": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::attraction.attraction"
        },
        "heroImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "required": true
        },
        "gallery": {
            "type": "media",
            "allowedTypes": [
                "images",
                "videos"
            ],
            "multiple": true
        },
        "description": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "highlights": {
            "type": "json"
        },
        "itinerary": {
            "type": "component",
            "component": "shared.itinerary-item",
            "repeatable": true
        },
        "duration": {
            "type": "string",
            "required": true
        },
        "priceAdult": {
            "type": "decimal",
            "required": true
        },
        "priceChild": {
            "type": "decimal"
        },
        "currency": {
            "type": "string",
            "default": "USD"
        },
        "included": {
            "type": "json"
        },
        "excluded": {
            "type": "json"
        },
        "meetingPoint": {
            "type": "string"
        },
        "maxGroupSize": {
            "type": "integer"
        },
        "minimumAge": {
            "type": "integer"
        },
        "difficulty": {
            "type": "enumeration",
            "enum": [
                "easy",
                "moderate",
                "challenging"
            ]
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "badge": {
            "type": "string"
        },
        "bookingUrl": {
            "type": "string"
        },
        "seoMetadata": {
            "type": "component",
            "component": "shared.seo"
        }
    }
}