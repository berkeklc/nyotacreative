{
    "kind": "collectionType",
    "collectionName": "rental_vehicles",
    "info": {
        "singularName": "rental-vehicle",
        "pluralName": "rental-vehicles",
        "displayName": "Rental Vehicle",
        "description": "Self-drive rental vehicles with pricing and specs"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "sedan",
                "suv",
                "van",
                "4x4",
                "luxury"
            ],
            "required": true
        },
        "transmission": {
            "type": "enumeration",
            "enum": [
                "automatic",
                "manual"
            ],
            "required": true
        },
        "seats": {
            "type": "integer",
            "required": true
        },
        "pricePerDay": {
            "type": "decimal",
            "required": true
        },
        "pricePerWeek": {
            "type": "decimal"
        },
        "features": {
            "type": "text"
        },
        "heroImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ]
        },
        "gallery": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "multiple": true
        },
        "available": {
            "type": "boolean",
            "default": true
        },
        "featured": {
            "type": "boolean",
            "default": false
        }
    }
}