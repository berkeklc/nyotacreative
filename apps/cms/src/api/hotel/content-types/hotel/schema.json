{
    "kind": "collectionType",
    "collectionName": "hotels",
    "info": {
        "singularName": "hotel",
        "pluralName": "hotels",
        "displayName": "Hotel",
        "description": "Hotels and accommodation listings"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "city": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::city.city",
            "inversedBy": "hotels"
        },
        "stars": {
            "type": "integer",
            "min": 1,
            "max": 5
        },
        "heroImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "required": true
        },
        "gallery": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "multiple": true
        },
        "description": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "amenities": {
            "type": "json"
        },
        "priceRange": {
            "type": "enumeration",
            "enum": [
                "budget",
                "moderate",
                "upscale",
                "luxury"
            ]
        },
        "location": {
            "type": "json"
        },
        "address": {
            "type": "string"
        },
        "bookingUrl": {
            "type": "string"
        },
        "affiliateUrl": {
            "type": "string"
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "seoMetadata": {
            "type": "component",
            "component": "shared.seo"
        }
    }
}