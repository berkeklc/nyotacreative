{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": "Travel guides, tips, and editorial content"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "excerpt": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "heroImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "required": true
        },
        "content": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "author": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::author.author",
            "inversedBy": "articles"
        },
        "cities": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::city.city"
        },
        "attractions": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::attraction.attraction"
        },
        "relatedArticles": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::article.article"
        },
        "relatedTours": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::tour.tour"
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "beaches",
                "food-drink",
                "culture",
                "adventure",
                "tips",
                "itineraries",
                "safety",
                "transportation",
                "nightlife",
                "shopping"
            ],
            "required": true
        },
        "readTime": {
            "type": "integer"
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "faqSection": {
            "type": "component",
            "component": "shared.faq",
            "repeatable": true
        },
        "seoMetadata": {
            "type": "component",
            "component": "shared.seo"
        }
    }
}