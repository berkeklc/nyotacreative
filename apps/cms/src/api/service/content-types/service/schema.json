{
    "kind": "collectionType",
    "collectionName": "services",
    "info": {
        "singularName": "service",
        "pluralName": "services",
        "displayName": "Service",
        "description": "Agency services offered"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "icon": {
            "type": "media",
            "allowedTypes": [
                "images"
            ]
        },
        "shortDescription": {
            "type": "text"
        },
        "fullDescription": {
            "type": "richtext"
        },
        "features": {
            "type": "json"
        },
        "order": {
            "type": "integer",
            "default": 0
        },
        "projects": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::project.project"
        },
        "seoMetadata": {
            "type": "component",
            "component": "shared.seo"
        }
    }
}