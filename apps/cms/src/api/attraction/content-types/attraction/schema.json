{
    "kind": "collectionType",
    "collectionName": "attractions",
    "info": {
        "singularName": "attraction",
        "pluralName": "attractions",
        "displayName": "Attraction",
        "description": "Tourist attractions and points of interest"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "city": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::city.city",
            "inversedBy": "attractions"
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "beach",
                "historical",
                "nature",
                "cultural",
                "adventure",
                "wildlife",
                "market",
                "restaurant",
                "nightlife",
                "museum"
            ],
            "required": true
        },
        "heroImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "required": true
        },
        "gallery": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "multiple": true
        },
        "description": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "location": {
            "type": "json"
        },
        "address": {
            "type": "string"
        },
        "openingHours": {
            "type": "component",
            "component": "shared.opening-hours"
        },
        "priceRange": {
            "type": "enumeration",
            "enum": [
                "free",
                "budget",
                "moderate",
                "expensive",
                "luxury"
            ]
        },
        "website": {
            "type": "string"
        },
        "tours": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::tour.tour"
        },
        "seoMetadata": {
            "type": "component",
            "component": "shared.seo"
        }
    }
}