{
    "kind": "collectionType",
    "collectionName": "destinations",
    "info": {
        "singularName": "destination",
        "pluralName": "destinations",
        "displayName": "Destination",
        "description": "Country-level travel destinations (e.g., Tanzania)"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "heroImage": {
            "type": "media",
            "allowedTypes": [
                "images"
            ],
            "required": false
        },
        "description": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "quickFacts": {
            "type": "component",
            "component": "shared.destination-facts",
            "required": false
        },
        "cities": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::city.city",
            "mappedBy": "destination"
        },
        "seoMetadata": {
            "type": "component",
            "component": "shared.seo",
            "required": false
        }
    }
}